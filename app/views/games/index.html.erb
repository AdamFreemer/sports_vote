<p id="notice"><%= notice %></p>

  <h1>Games</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to game&.name, game_path(game) %></td>
          <td><%= link_to '', edit_game_path(game), class: 'fa fa-edit fa-2x' %></td>
          <td><%= link_to '', game, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash fa-2x' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Game', new_game_path %>
