  <div class="field">
    <%# form.label :venue %>
    <%= form.input :venue_id, collection: Venue.all %>
  </div>
  <div class="field">
    <%# form.label :game_type %>
    <%= form.input :game_type_id, collection: GameType.all %>
  </div>
